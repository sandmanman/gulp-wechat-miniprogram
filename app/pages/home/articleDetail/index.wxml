<view class="auctionDetail-box">
  <view class="auctionInformation">
    <view class="productMessage">
      <view class="productTxtBox">
        <view class="productTitle">
          <text>{{wikiInfo.wiki.name}}</text>
          <text class="txt" space="nbsp">  /{{wikiInfo.wiki.foreign_name}}</text>
        </view>
        <view class="anothername">
          <text>别称：{{wikiInfo.wiki.alias}}</text>
        </view>
      </view>
      <button class="share-icon"
              open-type="share"
              plain
      >
        <image src="/assets/img/icon/share@2x.png"></image>
      </button>
    </view>
    <view class="videoAndPhotoBox">
      <view class="videoBox">
        <view class="videoplaybox">
          <video src="{{wikiInfo.wiki.video}}"
                 poster="{{wikiInfo.wiki.cover}}"
                 object-fit="cover"
                 show-play-btn="{{false}}"
                 controls
          ></video>
        </view>
        <view class="pictures">
          <view class="photoBox"
                wx:for="{{wikiInfo.media}}"
                wx:key="{{index}}"
                data-url="/pages/home/atlas/index?id={{item.article_id}}"
                data-articleid ="{{item.article_id}}"
                bind:tap="nagivateToAtlas"
          >
            <view class="pictus">
              <image src="{{item.url_oss}}"></image>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class="productExplain">
      <text>{{wikiInfo.wiki.desc}}</text>
    </view>
  </view>
  <view class="image-Icon-Box">
    <view class="icon-Message"
          wx:for="{{iconList}}"
          wx:key="{{index}}"
    >
      <view class="imgs"
            data-url="{{item.path}}"
            bind:tap="navigateToHander"
            data-id="{{wikiInfo.wiki.id}}"
      >
        <image src="{{item.icomImg}}"></image>
      </view>
      <view class="icontxt">{{item.txtname}}</view>
    </view>
  </view>
  <view class="treasureLog-List" wx:if="{{articleList.length}}">
    <treasureLog-List list="{{articleList}}"></treasureLog-List>
  </view>
  <view class="title">全部动态</view>
  <view class="comment-list">
    <waterfalls-flow list="{{momentList}}" isReachBottom="{{!canLoadNextPage}}"></waterfalls-flow>
  </view>
