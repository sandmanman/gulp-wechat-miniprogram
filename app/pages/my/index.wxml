<view class="my-center-box">
  <view class="user-center-box">
    <image class="bg" src="https://lvcui-image.oss-cn-shanghai.aliyuncs.com/background/bg-circle.png"></image>
    <view class="user-box">
          <view class="userhead-box">
            <view class="photo-box" hover-class="none" hover-stop-propagation="false">
                <image src="{{userInfo.avatar_url}}"></image>
            </view>
            <view class="username" wx:if="{{userInfo.nickname}}">{{userInfo.nickname}}</view>
            <button class="username"
                    open-type="getUserInfo"
                    plain
                    lang="zh_CN"
                    bind:getuserinfo="getUerInfo"
                    wx:else
            >点我登陆</button>
          </view>
          <view class="mytreasure">
              <text space="nbsp">我的宝物  <text class="treasure">256</text></text>
          </view>
    </view>
    <view class="title-txt">
        <view class="titleName"
              bind:tap="selectBtn"
              wx:for="{{titleList}}"
              data-index="{{index}}"
              wx:key="{{idx}}"
        >
              <view class="txtname"
                    style="{{selsectIndex === index && 'color:#333333;font-weight:600;'}}"
              >{{item.txtname}}</view>
              <text class="line" wx:if="{{selsectIndex == index}}"></text>
        </view>
    </view>
    <view class="divider"></view>
  </view>
