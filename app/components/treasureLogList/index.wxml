<view class="GoodsLogsBox">
    <view class="logsTitle">
        <view class="logsTxt">玩物日志</view>
        <view class="moretxt"
              data-url="/pages/home/treasureLog/index"
              bind:tap="navigateToHander">
            <text>更多</text>
            <text>></text>
        </view>
    </view>
    <view class="playGoodsBox">
        <scroll-view class="scrolls" scroll-x>
          <view class="auction-list">
            <view class="auction_box"
                  wx:for="{{list}}"
                  wx:key="index"
                  data-url="/pages/home/dynamicLog/index?id={{item.code}}"
                  bind:tap="navigateToHander"
            >
              <view class="img-box">
                <block wx:if="{{item.source_type === 'image'}}">
                  <image src="{{item.source_url}}" mode="aspectFill"></image>
                </block>
                <block wx:elif="{{item.source_type === 'video'}}">
                  <video src="{{item.source_url}}" object-fit="cover" controls="{{false}}"></video>
                </block>
                <view class="txt-box">
                  <view class="title">{{item.title}}</view>
                  <view class="time">已玩{{item.play_number}}天,{{item.play_count}}次</view>
                </view>
              </view>
              <view class="userbox">
                <image src="{{item.avatar_url}}"></image>
                <view>{{item.nickname}}</view>
              </view>
            </view>
          </view>
        </scroll-view>
    </view>
</view>
